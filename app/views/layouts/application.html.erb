<!DOCTYPE html>
<html>
  <head>
    <title>CakeShopApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
      <a class="navbar-brand" href="#">LOGO</a>
      <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="レスポンシブ・ナビゲーションバー">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="Navber">
        <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
         <!-- <li><a class="nav-item nav-link active" href="#">about</a></li> -->
         <% if customer_signed_in? %>
         <li><%= link_to "about", about_path, class:"nav-item nav-link" %></li>
          <li><%= link_to fa_icon("user_circle"), "#", class:"nav-item nav-link",alt:"ユーザーアイコン" %>ユーザアイコン</li>
          <li><%= link_to fa_icon("shopping-cart"), "#", class:"nav-item nav-link", alt:"ショッピングカート" %></li>
           <li class="">
                <%= link_to destroy_customer_session_path, method: :delete do %>
                <span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>   logout
                <% end %>
         <% else %>
         <li><%= link_to "about", about_path, class:"nav-item nav-link" %></li>

          <li><%= link_to "会員登録", new_customer_registration_path, class:"nav-item nav-link" %></li>
          <li><%= link_to "ログイン", new_customer_session_path , class:"nav-item nav-link"; %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <%= yield %>
    <footer>
      <p class="text-center">Copyright © 2019 UTASIMA</p>
    </footer>
  </body>
</html>
