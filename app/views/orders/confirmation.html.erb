<div class="container">
        <div class="row">
            <div class= "col-md-9">
				<h4>注文情報確認</h4>
				<table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="table-secondary">商品名</th>
                            <th class="table-secondary">単価(税込)</th>
                            <th class="table-secondary">数量</th>
                            <th class="table-secondary">小計</th>
                        </tr>
                    </thead>
                    <tbody>
                    	<% total = 0 %>
                    	<% @carts.each do |cart| %>
	                    	<tr>
                                <td><%= attachment_image_tag(cart.item, :image, :fill, 120, 120, format: 'jpg', fallback: "no_image.jpg") %></td>
	                    		<td><%= cart.item.name %></td>
	                    		<td><%= cart.item.price %></td>
	                    		<td><%= cart.number %></td>
	                    		<td> </td>
	                    	</tr>
	                    	<% total += cart.item.price * cart.number %>
                    	<% end %>
                    </tbody>
                </table>
            </div>
            <br><br>
            <div class= "col-md-3">
                <table class="table table-bordered">

                	<tbody>
                        <br>
                    	<tr>
                    		<th class="table-secondary">送料</th>
                    		<td>800</td>
                    	</tr>
                    	<tr>
                    		<th class="table-secondary">商品合計</th>
                    		<td><%= total %></td>
                    	</tr>
                    	<tr>
                    		<th class="table-secondary">請求金額</th>
                    		<td><%= total + 800 %></td>
                    	</tr>
                    </tbody>
                </table>
            </div>

            <div class= "col-md-9">
            <table class="table">

                    <tbody>
                        <tr>
                            <th class="h5">支払方法</th>
                            <td><%= session[:order]['payment'] %></td>
                        </tr>
                        <tr>
                            <th class="h5">お届け先</th>
                            <td><%= session[:order]['order_postal_code'] %>
                                <%= session[:order]['address'] %>
                                <%= session[:order]['name'] %>
                            </td>
                        </tr>
                    </tbody>
            </table>

            <%= link_to '購入を確定する',orders_path(total_price: total+800, customer_id:current_customer.id), class: 'btn btn-info px-3 pull-right', method: :post%>
            </div>

		</div>
</div>
<br><br>

