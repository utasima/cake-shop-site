<div class="container">
    <h4>注文履歴詳細</h4>
    <div class = "row">
        <div class = "order-info col-md-8">
            <p class = font-weight-bold>注文情報</p>
            <table border= "1">
                <tr>
                    <th>注文日</th>
                    <td><%= @order.created_at %></td>
                </tr>
                 <tr>
                    <th>配送先</th>
                    <td>
                        <%= @order.order_postal_code %><br>
                        <%= @order.address %><br>
                        <%= @order.name %>
                    </td>
                </tr>
                 <tr>
                    <th>支払い方法</th>
                    <td><%= @order.payment %></td>
                </tr>
                 <tr>
                    <th>ステータス</th>
                    <td><%= @order.order_status %></td>
                </tr>
            </table>
        </div>

        <div class = "charge_info col-md-4">
            <p class = font-weight-bold>請求情報</p>
            <table border= "1">
                 <tr>
                    <th>商品合計</th>
                    <td><%= @order.total_price %></td>
                </tr>
                <tr>
                    <th>配送料</th>
                    <td><%= @order.postage %></td>
                </tr>
                <tr>
                    <th>ご請求額</th>
                    <td><%= @order.total_price + @order.postage %></td>
                </tr>
            </table>
        </div>
    </div>
    <div class = "row">
        <div class = "order-item col-md-9">
            <p class = font-weight-bold>注文内容</p>
            <table border= "1">
                 <tr>
                    <th>商品</th>
                    <th>単価（税込）</th>
                    <th>個数</th>
                    <th>小計</th>
                </tr>
                <% @order.order_items.each do |order_item| %>
                    <tr>
                        <td><%= order_item.item.name %></td>
                        <td><%= order_item.item.price %></td>
                        <td><%= order_item.number %></td>
                        <td><%= order_item.number * order_item.item.price %></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>