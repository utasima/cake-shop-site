<h2>会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :last_name, "姓" %><br />
    <%= f.text_field :last_name %>
  </div>

   <div class="field">
      <%= f.label :first_name, "名" %><br />
      <%= f.text_field :first_name %>
    </div>

    <div class="field">
    <%= f.label :last_name_kana, "姓(カナ)" %><br />
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "名(カナ)" %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :phone_number, "電話番号" %><br />
    <%= f.text_field :phone_number %>
  </div>

   <div class="field">
    <%= f.label :customers_postal_code, "郵便番号" %><br />
    <%= f.text_field :customers_postal_code %>
  </div>

  <div class="field">
    <%= f.label :customers_address, "住所" %><br />
    <%= f.text_field :customers_address %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上で入力してください)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード(確認)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
