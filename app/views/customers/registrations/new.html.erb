
<div class="container">
    <div class="row">
         <div class= "col-md-6 mt-4 ml-5">
          <h1 class="text-center font-weight-bold">Sign Up</h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <table class="table table-borderless">
            <tbody>
              <tr>
                <th>氏名</th>
                <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
              </tr>
               <tr>
                <th>カナ</th>
                <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
              </tr>
               <tr>
                <th>電話番号</th>
                <td><%= f.text_field :phone_number %></td>
              </tr>
               <tr>
                <th>郵便番号</th>
                <td><%= f.text_field :customers_postal_code %></td>
              </tr>
               <tr>
                <th>住所</th>
                <td><%= f.text_field :customers_address %></td>
              </tr>
               <tr>
                <th>パスワード</th>
                <td><% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %>文字以上で入力してください)</em>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "new-password" %></td>
              </tr>
               <tr>
                <th>パスワード(確認)</th>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
              </tr>
            </tbody>
          </table>

          <br>
          <div class="actions text-right">
            <%= f.submit "登録",class: 'btn btn-info btn-lg col-md-4' %>
            <br><br>
            <%= render "customers/shared/links" %>
          </div>
        <% end %>

          <br><br>

    </div>
  </div>
</div>

