<div class="container">
    <div class="row">
         <div class= "col-md-6 ">
          <h1 class="text-center font-weight-bold">Sign Up</h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <table class="table">
            <tbody>

              <tr>
                <th>メールアドレス</th>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
              </tr>

               <tr>
                <th>パスワード</th>
                <td><% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %>文字以上で入力してください)</em>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "new-password" %></td>
              </tr>
               <tr>
                <th>パスワード(確認)</th>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
              </tr>
            </tbody>
          </table>

          <br>
          <div class="actions text-right">
            <%= f.submit "登録",class: 'btn btn-info px-5' %>
            <%= render "customers/shared/links" %>
          </div>
        <% end %>

          <br><br>

    </div>
  </div>
</div>
