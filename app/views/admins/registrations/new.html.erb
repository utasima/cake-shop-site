<div class="container">
    <div class="row">
         <div class= "col-md-4 mt-4 ml-5">
          <h1 class="text-center font-weight-bold ml-5 pl-5">Sign Up</h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <table class="table table-borderless ml-5">
            <tbody>

              <tr>
                <th style="width: 40%">メールアドレス</th>
                <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-12" %></td>
              </tr>

               <tr>
                <th>パスワード</th>
                <td><% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %>文字以上で入力してください)</em>
                    <% end %>
                    <%= f.password_field :password, autocomplete: "new-password", class: "col-md-12" %></td>
              </tr>
               <tr>
                <th>パスワード(確認)</th>
                <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-md-12" %></td>
              </tr>
            </tbody>
          </table>

          <div class="actions text-right col-md-12 ml-5">
            <%= f.submit "登録",class: 'btn btn-info col-md-6' %>
            <br><br>
            <%= render "customers/shared/links" %>
          </div>
        <% end %>

          <br><br>

    </div>
  </div>
</div>
