<div class="container">
    <div class="row">
         <div class= "col-md-4 mt-4 ml-5">
            <h1 class="text-center font-weight-bold ml-5 pl-5">Login</h1>

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <table class="table table-borderless ml-5">
                  <tbody>
                    <tr>
                      <th style="width: 40%">メールアドレス</th>
                      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-12" %></td>
                    </tr>
                    <tr>
                      <th>パスワード</th>
                      <td><%= f.password_field :password, autocomplete: "current-password", class: "col-md-12" %></td>
                    </tr>
                  </tbody>
                </table>

                <% if devise_mapping.rememberable? %>
                  <div class="field ml-5">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, "ログインしたままにする" %>
                  </div>
                <% end %>
                <div class="actions text-right col-md-12 ml-5 mt-3">
                  <%= f.submit "ログイン",class: 'btn btn-info col-md-6' %>
                  <br><br>
                  <%= render "customers/shared/links" %>
                  <br><br>
                </div>
              <% end %>

        </div>
    </div>
</div>

