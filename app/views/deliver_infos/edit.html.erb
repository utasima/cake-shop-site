<br><br>
<div class="container">
        <div class="row">
            <div class= "col-md-8">
              <h4>配送先編集</h4>
                <%= form_for @deliver_info do |deliver_info_form| %>
                  <table class="table table-bordered">
                      <tbody>
                        <tr>
                          <th class="table-secondary">郵便番号</th>
                            <td><%= deliver_info_form.text_field :postal_code %></td>
                        </tr>
                        <tr>
                          <th class="table-secondary">住所</th>
                          <td><%= deliver_info_form.text_field :address %></td>
                        </tr>
                        <tr>
                          <th class="table-secondary">宛名</th>
                          <td><%= deliver_info_form.text_field :name %></td>
                        </tr>
                      </tbody>
                  </table>
                  </div>
                  <div class= "col-md-2">
                    <br><br><br><br><br><br><br>
                    <span><%= deliver_info_form.submit '編集する', class: 'btn btn-info px-5' %></span>
                  </div>
                  <% end %>

     
