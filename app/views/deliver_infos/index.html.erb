<div class="container">
        <div class="row">
            <div class= "col-md-10 mt-4">
                <h4 class="mb-4">配達先登録/一覧</h4>

                  <%= form_for(@deliver_info, url: create_deliver_info_path) do |deliver_info_form| %>
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th class="table-secondary">郵便番号</th>
                                <td><%= deliver_info_form.text_field :postal_code, class: "col-md-5" %></td>
                            </tr>
                            <tr>
                                <th class="table-secondary">住所</th>
                                <td><%= deliver_info_form.text_field :address, class: "col-md-11" %></td>
                            </tr>
                            <tr>
                                <th class="table-secondary">宛名</th>
                                <td><%= deliver_info_form.text_field :name, class: "col-md-5" %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class= "col-md-2 mt-5">
                    <br><br><br><br>
                    <span><%= deliver_info_form.submit '登録', class: 'btn btn-info col-md-12 mt-5' %></span>
                </div>

                <% end %>
        <div class= "col-md-10">

         <p id="notice"><%= notice %></p>

            <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th class="table-secondary">郵便番号</th>
                            <th class="table-secondary">住所</th>
                            <th class="table-secondary">宛名</th>
                            <th class="table-secondary"></th>
                        </tr>
                    </thead>
                        <% @deliver_infos.each do |deliver| %>
                    <tbody>
                        <tr>
                            <td style="width: 15%"><%= deliver.postal_code %></td>
                            <td style="width: 45%"><%= deliver.address %></td>
                            <td style="width: 15%"><%= deliver.name %></td>
                            <td style="width: 25%"><%= link_to '編集する', edit_deliver_info_path(deliver), class: 'btn btn-info col-xs-6' %>
                                <%= link_to '削除する', deliver, method: :delete, class: 'btn btn-danger col-xs-6', data: { confirm: '本当によろしいですか?' } %></td>
                        </tr>
                    </tbody>
                    <% end %>
            </table>
            <br>
        </div>
    </div>
</div>
