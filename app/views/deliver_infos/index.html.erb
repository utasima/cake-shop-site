
<div class="container-fluid">
  <div class="row">

<div class="col-8 offset-md-1">

<h1><%= "配達先登録/一覧" %><h1><br />



<h3><%= "配送先新規作成" %></h3><br />
  <%= form_for(@deliver_info, url: create_deliver_info_path) do |deliver_info_form| %>


  <table class="table table-light">
  <tbody>
    <tr>
      <td><%= deliver_info_form.label :name, "宛名" %></td>
      <td><%= deliver_info_form.text_field :name %></td>
    </tr>
    <tr>
     <td><%= deliver_info_form.label :postal_code, "郵便番号" %></td>
      <td><%= deliver_info_form.text_field :postal_code %></td>
    </tr>
    <tr>
      <td><%= deliver_info_form.label :address, "住所" %></td>
      <td><%= deliver_info_form.text_field :address %></td>

      <td><div class="actions">
        <%= deliver_info_form.submit '登録', class: 'btn btn-primary btn-lg my-1 mb-5 px-5' %> 
      </div></td>
    </tr>
  </tbody>
</table>
<% end %>


<p id="notice"><%= notice %></p>


<% @deliver_infos.each do |deliver| %>
    <%= deliver.name %>
    <%= deliver.postal_code %>
    <%= deliver.address %>
    <%= link_to '編集する', edit_deliver_info_path(deliver), class: 'btn btn-primary btn-lg my-1 mb-5 px-5' %>
    <%= link_to '削除する', deliver, method: :delete, class: 'btn btn-primary btn-lg my-1 mb-5 px-5', data: { confirm: '本当によろしいですか?' } %>
<% end %>

