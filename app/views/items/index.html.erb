<div class="container pt-3">
  <div class="row">
    <div class="col-3">
      <div class="genre">
        <h3>ジャンル検索</h3>
        <% @genre.each do |genre| %>
          <p class="genre_name"><%= link_to genre.name, "/search/genre?genre=#{genre.id}", class:"genre_name"%><p>
        <% end %>
      </div>
    </div>
    <div class="col-9">
      <% if @genre_name %>
      <h2 class="d-inline-block ml-3"><%= @genre_name.name %></h2>
      <p class="d-inline-block"><%="（全#{@genre_name.items.count}件）" %></p>
      <% end %>
      <div class="item-box flex-wrap d-flex justify-content-start">
        <!-- キーワード検索 -->
        <% if @search %>
          <% @search.each do |search| %>
            <div class="col-3">
              <div class ="card mb-3" style="width: 200px; height: 250px;">
                <div class = "card-img-top pl-4 pt-3">
                  <%= link_to attachment_image_tag(search, :image, :fill, 150, 100, format: 'jpg', fallback: "no_image.jpg", size:"150x100"), item_path(search) %>
                </div>
                <div class= "card-body pl-4">
                  <div class = "card-title ">
                    <%= search.name %>
                  </div>
                  <div class = "card-text ">
                    ￥<%= search.price %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <% @items.each do |item| %>
            <div class="col-3">
              <div class ="card mb-3" style="width: 200px; height: 250px;">
                <div class = "card-img-top pl-4 pt-3">
                  <%= link_to attachment_image_tag(item, :image, :fill, 150, 100, format: 'jpg', fallback: "no_image.jpg", size:"150x100"), item_path(item) %>
                <div class= "card-body pl-4">
                  <div class = "card-title ">
                    <%= item.name %>
                  </div>
                  <div class = "card-text ">
                    ￥<%= item.price %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
</div>
