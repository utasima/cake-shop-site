<div class="container">
	<div class = "row">
		<div class = "col-md-12">
			<h2 class = "mt-4 mb-3">商品詳細</h2>
				<div class ="card mb-5" style="width: 450px">
					<div class = "card-img-top pl-5 pt-4">
						<%= link_to attachment_image_tag(@item, :image, :fill, 350, 300, format: 'jpg', fallback: "no_image.jpg") %>
					</div>
					<div class= "card-body pl-5">
						<div class = "card-title h4">
							<%= @item.name %></div>
						<div class = "card-text h5">
							<%= @item.description %></div>
						<div class = "card-text h5">
							<%= @item.price %></div>

						<%= link_to edit_admin_item_path(@item) do %>
						<div class="btn btn-info btn-lg col-md-11 mt-3 mb-3 ">編集する</div>
						<% end %>
					</div>
	    		</div>
	  	</div>
	</div>
</div>