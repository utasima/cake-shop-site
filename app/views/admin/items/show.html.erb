<div class="container-fluid">
  <div class="row">


<div class="col-2 offset-md-3">
  
  <p id="notice"><%= notice %></p>
  
  <table class="table">
  <tr>
  <div class="field">
 
  <th><%= @item.name %></th>
  </div>
  </tr>
  <tr>
  <div class="field">

  <th><%= @item.price %></th>
  </div>
  </tr>
  <tr>
  <div class="field">

    <th><%= @item.description %></th>
  </div>
  </tr>
  <tr>
  <div class="actions">
    <th><%= link_to edit_admin_item_path do %>
      <div class="btn btn-outline-primary">Create CAKE</div>
    <% end %>
</th>
  </div>
  </tr>
  <tr>
  <div class="actions">
    <div class="container">
      <%= link_to attachment_image_tag(@item, :image, :fill, 120, 120, format: 'jpg', fallback: "no_image.jpg"), admin_item_path(@item) %>
    </div>
  </div>
  </tr>
  </table>

</div>

</div>
</div>