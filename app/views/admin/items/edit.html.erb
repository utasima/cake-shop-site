<div class="container-fluid">
  	<div class="row">
    	<div class="col-md-4 offset-md-4 mt-5">
	    	<%= form_for @item , url:admin_item_path do |f| %>

					<%= f.label :商品名 %>
					<%= f.text_field :name, class:"form-control"  %>

					<%= f.label :値段  %>
					<%= f.number_field :price, class:"form-control"  %>

					<%= f.label :説明文 %>
					<%= f.text_area :description,  class:"form-control" %>
					<%= f.submit "変更する",class: 'btn btn-info btn-block mt-4 mb-5' %>
				<% end %>
			<%= link_to '売り切れに変更', admin_item_path(@item), method: :delete, class: 'btn btn-primary btn-lg my-1 mb-5 px-5', data: { confirm: '本当によろしいですか?' } %>
		</div>
	</div>
</div>
