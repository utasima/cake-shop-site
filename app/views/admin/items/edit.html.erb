<div class="container-fluid">
  	<div class="row">
    	<div class="col-md-4 offset-md-4 mt-5">
	    	<%= form_for @item , url:admin_item_path do |f| %>

					<%= f.label :商品名 %>
					<%= f.text_field :name, class:"form-control"  %>

					<%= f.label :値段  %>
					<%= f.number_field :price, class:"form-control"  %>

					<%= f.label :説明文 %>
					<%= f.text_area :description,  class:"form-control" %>

					<h3>販売状況</h3>
					<%= f.radio_button :sales_status, :販売中, checked: true %>
					<%= f.label :販売中%>

					<%= f.radio_button :sales_status, :売り切れ%>
					<%= f.label :売り切れ%>

					<%= f.submit "変更する",class: 'btn btn-info btn-block mt-4 mb-5' %>
				<% end %>

		</div>
	</div>
</div>
