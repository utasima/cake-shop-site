<h3><%= "ジャンル編集" %></h3><br />
<p id="notice"><%= notice %></p>

<%= form_for(@genre, url: admin_genre_path) do |edit_genre_form| %>
  <%= edit_genre_form.text_field :name %>
  <%= edit_genre_form.submit('完了',class: 'btn btn-primary btn-lg my-1 mb-5 px-5') %>
  <%= edit_genre_form.submit('有効', class: 'btn btn-primary btn-lg my-1 mb-5 px-5') %>
<% end %>

<%= link_to '無効', admin_genre_path(@genre), method: :delete, class: 'btn btn-primary btn-lg my-1 mb-5 px-5', data: { confirm: '本当によろしいですか?' } %>
