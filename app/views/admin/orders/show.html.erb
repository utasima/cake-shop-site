<div class="container">
	<h4>注文履歴詳細</h4>
	<div class = "row">
			<div class = "order-info col-md-8">
					<p class = font-weight-bold>注文情報</p>
					<table border= "1">
							<tr>
									<th>注文日</th>
									<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
							</tr>
								<tr>
									<th>配送先</th>
									<td>
											<%= @order.order_postal_code %><br>
											<%= @order.address %><br>
											<%= @order.name %>
									</td>
							</tr>
								<tr>
									<th>支払い方法</th>
									<td>
											<% if @order.クレジットカード? %>
													銀行振り込み
											<% else %>
													クレジット
											<% end %>
									</td>
							</tr>
								<tr>
									<th>ステータス</th>
									<td>
											<%= @order.order_status %>
									</td>
							</tr>
					</table>
			</div>

			<div class = "charge_info col-md-4">
					<p class = font-weight-bold>請求情報</p>
					<table border= "1">
								<tr>
									<th>商品合計</th>
									<td><%= @order.total_price %></td>
							</tr>
							<tr>
									<th>配送料</th>
									<td><%= @order.postage %></td>
							</tr>
							<tr>
									<th>ご請求額</th>
									<td><%= @order.total_price + @order.postage %></td>
							</tr>
					</table>
			</div>
	</div>
	<div class = "row">
		<div class = "order-item col-md-9">
			<p class = font-weight-bold>注文内容</p>
<% @order.order_items.each do |order_item| %>
				<table border= "1">
					<tr>
						<th>商品</th>
						<th>単価（税込）</th>
						<th>個数</th>
						<th>小計</th>
					</tr>
					<tr>
							<td><%= order_item.item.name %></td>
							<td><%= order_item.item.price %></td>
							<td><%= order_item.number %></td>
							<td><%= order_item.number * order_item.item.price %></td>
					</tr>
				</table>
			</div>
		</div>
	</div>
	<%= form_for(order_item, url: admin_order_item_path) do |f| %>
		<%= f.hidden_field :test_id, :value => order_item.id %>
		<div class="field">
			<span class="job_type_engine">製造ステータス</span><br>
			<div class="radio-inline">
				<%= f.radio_button :making_status, :impossible, checked: "checked" %>
				<%= f.label :着手不可, class: "job_type_label" %>
			</div>
			<div class="radio-inline">
				<%= f.radio_button :making_status, :waiting %>
				<%= f.label :製造待ち, class: "job_type_label" %>
			</div>
			<div class="radio-inline">
				<%= f.radio_button :making_status, :in_production %>
				<%= f.label :製造中, class: "job_type_label" %>
			</div>
			<div class="radio-inline">
				<%= f.radio_button :making_status, :finish %>
				<%= f.label :製造完了, class: "job_type_label" %>
			</div>
		</div>                    
		<%= f.submit('製造ステータスを更新',class: 'btn btn-primary btn-lg my-1 mb-5 px-5') %>
	<% end %>
<% end %>

<h2>ステータスの更新</h2>

<%= form_for(@order, url: admin_order_path) do |f| %>
	<div class="field">
		<span class="job_type_engine">注文ステータス</span><br>

		<div class="radio-inline">
			<%= f.radio_button :order_status, :unpaid, checked: "checked" %>
			<%= f.label :入金待ち, class: "job_type_label" %>
		</div>
		<div class="radio-inline">
			<%= f.radio_button :order_status, :deposited %>
			<%= f.label :入金確認, class: "job_type_label" %>
		</div>
		<div class="radio-inline">
			<%= f.radio_button :order_status, :in_production %>
			<%= f.label :製造中, class: "job_type_label" %>
		</div>
		<div class="radio-inline">
			<%= f.radio_button :order_status, :preparing %>
			<%= f.label :発送準備中, class: "job_type_label" %>
		</div>
		<div class="radio-inline">
			<%= f.radio_button :order_status, :sent %>
			<%= f.label :発送済み, class: "job_type_label" %>
		</div>
	</div>                    
	<%= f.submit('注文ステータスを更新',class: 'btn btn-primary btn-lg my-1 mb-5 px-5') %>
<% end %>